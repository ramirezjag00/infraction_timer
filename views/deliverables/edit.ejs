<% include ../partials/header %>
<div class="container">
	<h1 class="index-header-text">Edit Deliverable
	</h1>
	<div class="form-container">
		<form action="/incidents/<%= incident_id %>/deliverables/<%=deliverable._id%>?_method=PUT"" method="POST">
			<div class="form-group">
				<textarea name="deliverable[description]" class="form-control" placeholder="description" required="required" rows="10"><%= deliverable.description %></textarea>
			</div>
			<div class="form-group">
				<select class="form-control" name="deliverable[status]" required="required">
					<option value="Issued">In Progress</option>
					<option value="Overturned">Completed</option>
				</select>
			</div>
			<div class="form-group">
				<input class="form-control" type="date" name="deliverable[endDate]" value="<%=deliverable.endDate.toISOString().substring(0, 10)%>">
			</div>
			<div class="form-group">
				<button class="btn">SAVE</button>
			</div>
		</form>
		<a href="/incidents/<%incident_id%>" class="incidents-view-link">View Incident</a>
	</div>
</div>
<% include ../partials/footer %>