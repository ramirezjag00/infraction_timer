<% include ./partials/header %>
<div class="container">
	<div class="form-container margin">
		<form action="/reset/<%= token %>" method="POST">
			<h1 class="text-center">Reset Password</h1>
			<div class="form-group">
				<div><label for="password">New Password</label></div>
				<input class="form-control-input" type="password" name="password" placeholder="New Password" minlength="8" maxlength="16" required="required">
			</div>
			<div class="form-group">
				<div><label for="confirm">Confirm Password</label></div>
				<input class="form-control-input" type="password" name="confirm" placeholder="Confirm Password" minlength="8" maxlength="16" required="required">
			</div>
			<div class="form-group">
				<button class="btn-login">Reset Password</button>
			</div>
		</form>
	</div>
</div>
<% include ./partials/footer %>