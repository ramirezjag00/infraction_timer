<% include ./partials/header %>
<div class="container">
		<h1 class="text-center">Log In</h1>
		<h4 class="text-center">to continue to InfractionTimer</h4>
		<div class="form-container">
			<form action="/login" method="POST">
				<div class="form-group">
					<input class="form-control form-control-input" type="text" name="username" placeholder="employee number" required="required">
				</div>
				<div class="form-group">
					<input class="form-control form-control-input" type="password" name="password" placeholder="password" required="required">
				</div>
				<div class="form-group">
					<button class="btn-login">LOG IN</button>
				</div>
				<div class="form-group">
					<p>Forgot Password? Contact IT Helpdesk.</p>
				</div>
			</form>
		</div>
</div>
<% include ./partials/footer %>