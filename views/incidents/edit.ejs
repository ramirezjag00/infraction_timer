<% include ../partials/header %>
<div class="container">
	<h1 class="index-header-text">Edit <%= incident %></h1>
	<div class="form-container">
		<form action="/incidents/<%= incident._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" value="<%= incident.title %>" name="incident[title]">	
			</div>
			<div class="form-group">
				<textarea name="incident[description]" class="form-control" placeholder="description" required="required" rows="10"></textarea>
			</div>
			<div class="form-group">
				<button class="btn">SUBMIT</button>
			</div>
		</form>
		<a href="/incidents">View Incidents</a>
	</div>
</div>
<% include ../partials/footer %>