<% include ../partials/header %>
<div class="container">
	<h1 class="index-header-text">Edit <%= incident.title %></h1>
	<div class="form-container">
		<form action="/incidents/<%= incident._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" value="<%= incident.title %>" name="incident[title]">	
			</div>
			<div class="form-group">
				<textarea name="incident[description]" class="form-control" placeholder="description" required="required" rows="10"><%= incident.description %></textarea>
			</div>
			<div class="form-group">
				<select class="form-control" name="incident[status]" required="required">
					<option value="Issued">Issued</option>
					<option value="Overturned">Overturned</option>
				</select>
			</div>
			<div class="form-group">
					<input class="form-control" type="date" name="incident[deadline]" value="<%=incident.deadline.toISOString().substring(0, 10)%>">
			</div>
			<div class="form-group">
				<button class="btn">SAVE</button>
			</div>
		</form>
		<a href="/incidents" class="incidents-view-link">View Incidents</a>
	</div>
</div>
<% include ../partials/footer %>